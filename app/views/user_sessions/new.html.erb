<% title "Log in" %>
<% stylesheet "generic" %>

<p>Don't have an account? <%= link_to "Sign up!", signup_path %></p>

<% form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </p>
  <p><%= f.submit "Log in" %></p>
  
  <h2>Or use OpenID</h2>
  <p>
    <%= f.label :openid_identifier, "OpenID URL" %><br />
    <%= f.text_field :openid_identifier %>
  </p>
  <p><%= f.submit "Log in" %></p>
<% end %>
